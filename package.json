{
  "name": "smarthome",
  "version": "1.0.0",
  "description": "A menu bar app for managing Govee lights and devices",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "tsc --watch & electron .",
    "electron:dev": "npm run build && electron . --dev",
    "electron:watch": "tsc --watch & wait-on dist/main/index.js && electron . --dev",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js"
  },
  "keywords": [
    "govee",
    "smart-home",
    "menu-bar",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "menubar": "^9.5.2",
    "mqtt": "^5.3.1"
  },
  "build": {
    "appId": "com.smarthome.govee",
    "productName": "SmartHome",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "target": [
        "dmg"
      ]
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}

